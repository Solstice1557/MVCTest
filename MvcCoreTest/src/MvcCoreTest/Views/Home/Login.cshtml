@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h3>List of users</h3>
<h4>just for your information</h4>
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>User name</th>
      <th>Password</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>User1</td>
      <td>qwe</td>
    </tr>
    <tr>
      <td>User2</td>
      <td>123</td>
    </tr>
    <tr>
      <td>MasterUser</td>
      <td>rty</td>
    </tr>
  </tbody>
</table>

<form asp-controller="Home" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="POST" class="form-horizontal">
  <div asp-validation-summary="All" class="text-danger"></div>

  <fieldset class="form-group">
    <label asp-for="Login" class="control-label col-md-2">User name: </label>
    <div class="col-md-10">
      <input asp-for="Login" class="form-control" placeholder="User name" />
      <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    
  </fieldset>
  <fieldset class="form-group">
    <label asp-for="Password" class="control-label col-md-2">Password: </label>
    <div class="col-md-10">
      <input asp-for="Password" class="form-control" placeholder="Password" />
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
  </fieldset>
  <fieldset class="form-group">
    <label class="col-md-offset-2 col-md-10">
      <input type="checkbox" asp-for="RememberMe"/>
      Remember me
    </label>
  </fieldset>

  <fieldset class="form-group">
    <label asp-for="Captcha" class="control-label col-md-2">Captcha: </label>
    <div class="col-md-3 captcha">
      <img src="/Home/Captcha" alt="captcha"/>
      <span class="text-muted">valid for one minute</span>
    </div>

    <div class="col-md-7">
      <input asp-for="Captcha" class="form-control" placeholder="Captcha"/>
      <span asp-validation-for="Captcha" class="text-danger"></span>
    </div>
  </fieldset>

  @Html.AntiForgeryToken()

  <button type="submit" class="btn btn-default">Sign in</button>
</form>